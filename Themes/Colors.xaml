<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Paleta sencilla y moderna -->
    <Color x:Key="AccentColor">#FF3B82F6</Color>
    <!-- Azul vibrante -->
    <Color x:Key="SurfaceColor">#FF1E1E1E</Color>
    <Color x:Key="OnSurfaceColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}" />
</ResourceDictionary>
