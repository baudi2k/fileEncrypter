<Window x:Class="FileEncrypter.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileEncrypter"
        Width="400" Height="250"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SurfaceBrush}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border CornerRadius="8" Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Border x:Name="IconContainer" Width="40" Height="40" CornerRadius="20" Background="#FFE74C3C" Margin="0,0,15,0">
                    <TextBlock x:Name="IconText" Text="!" FontSize="24" FontWeight="Bold" Foreground="White" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="TitleText" Text="Error de Autenticación" 
                              FontSize="18" FontWeight="Bold" 
                              Foreground="{StaticResource OnSurfaceBrush}"/>
                    <TextBlock Text="FileEncrypter" 
                              FontSize="12" 
                              Foreground="{StaticResource AccentBrush}" 
                              Opacity="0.8"/>
                </StackPanel>
            </StackPanel>

            <!-- Message -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="MessageText" 
                          Text="La contraseña ingresada es incorrecta. Por favor, verifique e intente nuevamente." 
                          FontSize="14" 
                          Foreground="{StaticResource OnSurfaceBrush}"
                          TextWrapping="Wrap"
                          LineHeight="20"/>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="OkButton" 
                        Content="Aceptar" 
                        Width="80" 
                        Style="{StaticResource AccentButton}"
                        Click="OkButton_Click" 
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 