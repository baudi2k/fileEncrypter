<Window x:Class="FileEncrypter.RecoveryPhraseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Frase de Recuperación"
        Height="460" Width="680"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SurfaceBrush}">

    <Grid Margin="30">
        <!-- Pila vertical principal -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="600">

            <!-- estilo para dar separación vertical entre los hijos -->
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,0,0,16"/>
                </Style>
            </StackPanel.Resources>

            <!-- Título -->
            <TextBlock Text="Frase de Recuperación Generada"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="{DynamicResource OnSurfaceBrush}"
                       TextAlignment="Center"/>

            <!-- Cuadro que muestra la frase -->
            <Border Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource OutlineBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="20">
                <TextBlock x:Name="RecoveryPhraseDisplay"
                           FontFamily="Consolas"
                           FontSize="16"
                           Foreground="{DynamicResource OnSurfaceBrush}"
                           TextWrapping="Wrap"
                           TextAlignment="Left"/>
            </Border>

            <!-- Confirmación -->
            <CheckBox x:Name="ConfirmationCheckBox"
                      Content="He guardado esta frase de forma segura"
                      FontSize="14"
                      Checked="ConfirmationCheckBox_Changed"
                      Unchecked="ConfirmationCheckBox_Changed"
                      Foreground="{DynamicResource OnSurfaceBrush}"/>

            <!-- Botonera -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <!-- estilo para separar los botones horizontalmente -->
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5,0"/>
                    </Style>
                </StackPanel.Resources>

                <Button Content="📋 Copiar"
                        Width="120"
                        Click="CopyRecoveryPhrase_Click"
                        Style="{DynamicResource PrimaryButton}"/>

                <Button Content="💾 Guardar"
                        Width="120"
                        Click="SaveRecoveryPhrase_Click"
                        Style="{DynamicResource SecondaryButton}"/>

                <Button x:Name="CloseButton"
                        Content="Cerrar"
                        Width="120"
                        IsEnabled="False"
                        Click="CloseButton_Click"
                        Style="{DynamicResource OutlineButton}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
