<Window x:Class="FileEncrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileEncrypter"
        Width="450" Height="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource SurfaceBrush}"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        DragLeave="Window_DragLeave"
        Drop="Window_Drop">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="FileEncrypter" 
            FontSize="24" 
            FontWeight="Bold"
            Foreground="{StaticResource OnSurfaceBrush}"
            HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,24,0,0">
            <TextBlock 
                Text="Contraseña" 
                FontWeight="SemiBold"
                Foreground="{StaticResource OnSurfaceBrush}"/>
            <PasswordBox x:Name="PasswordInput" Margin="0,5,0,0"/>

            <StackPanel 
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,0">
                <Button 
                    Content="Encriptar" 
                    Width="100"
                    Style="{StaticResource AccentButton}"
                    Click="EncryptFile_Click"/>
                <Button 
                    Content="Desencriptar" 
                    Width="100" 
                    Margin="5,0,0,0"
                    Style="{StaticResource AccentButton}"
                    Click="DecryptFile_Click"/>
                <Button 
                    x:Name="CancelButton" 
                    Content="Cancelar" 
                    Width="100" 
                    Margin="5,0,0,0"
                    Style="{StaticResource FlatButton}"
                    Click="CancelButton_Click" 
                    IsEnabled="False"/>
            </StackPanel>

            <ProgressBar 
                x:Name="ProgressBar" 
                Visibility="Collapsed" 
                Margin="0,20,0,0"
                Height="20"/>

            <!-- Zona de Drag & Drop -->
            <Grid x:Name="DropZone" Margin="0,20,0,0" Height="80">
                <Rectangle Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="2" 
                          StrokeDashArray="5,3" 
                          RadiusX="8" 
                          RadiusY="8"
                          Fill="Transparent"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📁" FontSize="24" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="Arrastra archivos aquí" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource OnSurfaceBrush}" Opacity="0.7"/>
                    <TextBlock Text="(.enc para desencriptar, otros para encriptar)" FontSize="10" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}" Opacity="0.6"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>